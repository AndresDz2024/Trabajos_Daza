	leer num
	
	si num < 0 Entonces
		Escribir "El número " num " es negativo "
	SiNo
		si num = 0 Entonces
			Escribir "El número " num " no es ni negativo ni positivo"
		SiNo
			escribir "EL número " num " es positivo"
		FinSi
	FinSi
	
	
